<h1>{{name}} <small>({{doses_per_vial}} doses per vial)</small></h1>


<h2>Schedule Parameters</h2>

<div class="col-sm-8">
	<form class="form-horizontal" role="form">
		<div class="row">
			<div class="col-sm-3 col-sm-offset-6 text-center" style="font-size: x-small">Vaccine</div>
			<div class="col-sm-3 text-center" style="font-size: x-small">Diluent</div>
		</div>
		<div class="form-group">
			<label for="" class="col-sm-6 control-label">Volume per dose <small>(cm<sup>3</sup>/dose)</small></label>
			<div class="col-sm-3">
				{{input type="text" value=vaccine_volume class="form-control"}}
			</div>
			<div class="col-sm-3">
				{{input type="text" value=diluent_volume class="form-control"}}
			</div>
		</div>
		<div class="form-group">
			<label for="" class="col-sm-6 control-label">Doses to complete schedule</label>
			<div class="col-sm-4 col-sm-offset-1">
				{{input type="text" value=doses_series class="form-control"}}
			</div>
		</div>
		<div class="form-group">
			<label for="" class="col-sm-6 control-label">
				Immunization target
				<small>% of Total Population</small>
			</label>
			<div class="col-sm-4 col-sm-offset-1 input-group">
				{{input type="text" value=doses_series class="form-control"}}
				<span class="input-group-addon">%</span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-6 col-sm-6">
				<button type="submit" class="btn btn-default">Sign in</button>
			</div>
		</div>
	</form>
</div>

<div class="col-sm-4">
figures
</div>
